#include <iostream>
#include <string>
#include <cctype>
using namespace std;


bool palin(string cadena)
{
	string cadena1 = string(cadena.rbegin(), cadena.rend());

	if (cadena == cadena1)
		return true;
	else
		return false;
}

int main()
{

	string oracion;
	cout << "Escribe tu oracion, te diremos si es palindroma: " << "\n";

	getline(cin, oracion);

	if (palin(oracion) == true)
		cout << "Tu oracion si es PALINDROMA!!";
	else
		cout << "Tu oracion no es cheverengue";

	system("pause");
}
